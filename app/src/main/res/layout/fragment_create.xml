<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".CreateNewContact">
    <Button
        android:id="@+id/backBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/border_bg"
        android:layout_marginTop="40dp"
        android:layout_marginStart="40dp"
        />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toTopOf="@+id/etCreateName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="150dp"
        android:background="@drawable/border_bg"
        />
    <EditText
        android:id="@+id/etCreateName"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="@string/add_contact_name"
        android:padding="10dp"
        android:textColorHint="@color/light_gray"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/border_bg"
        android:textCursorDrawable="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:inputType="text"
        android:layout_marginTop="500dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <EditText
        android:id="@+id/etCreateNumber"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:padding="10dp"
        android:textColorHint="@color/light_gray"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:background="@drawable/border_bg"
        android:inputType ="phone"
        android:text="+7("
        android:maxLength="14"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:textCursorDrawable="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etCreateName" />
    <Button
        android:id="@+id/createBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/etCreateNumber"
        android:layout_marginHorizontal="30dp"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:text="@string/create"
        android:layout_marginTop="40dp"
        android:background="@drawable/border_bg"
        />

</androidx.constraintlayout.widget.ConstraintLayout>